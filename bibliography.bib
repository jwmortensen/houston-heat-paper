@article{Nicholls2009,
abstract = {Abstract  A method for estimating the changes in mortality resulting from observed or projected climate changes is presented. The method$\backslash$navoids reliance on observed and projected changes in extreme temperatures, and also avoids the confounding effects of long-term$\backslash$ninfluences on mortality such as changes in populations and improvements in medical services. The method relies on the existence$\backslash$nof a close correlation between high-pass filtered values of a health indicator variable and a climate variable. Where such$\backslash$na relationship exists, the method provides a simple and robust way to estimate past and future health effects of climate trends.$\backslash$nThe method is used to estimate the effects of warming of winter temperatures on mortality amongst persons aged 65 years and$\backslash$nabove, in Melbourne, Australia. The observed warming of 0.7°C over the period 1979–2001 is estimated to have caused a decline$\backslash$nin winter mortality of 4.5{\%}, slightly offsetting an observed increase in mortality due to an increasing elderly population.$\backslash$nA further 2°C warming could be expected to lead to a decline in winter mortality of 13{\%}. The method was also tested on summer$\backslash$nmortality of New York City residents aged 75 years and above. In this case a 2°C warming would lead to a 2.6{\%} increase in$\backslash$nmortality.},
author = {Nicholls, Neville},
doi = {10.1007/s10584-009-9694-z},
file = {:Users/jacobmortensen/Research/Dr. Heaton/drafts/LaTeXFiles/PapersToCite/Nicholls2009.pdf:pdf},
