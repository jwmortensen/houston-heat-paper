issn = {00207128},
journal = {International Journal of Biometeorology},
keywords = {Apparent temperature,Emergency ambulance dispatch,Heat,Heatstroke,Japan,Time-series},
number = {5},
pages = {941--948},
pmid = {23700200},
title = {{Characterizing the effect of summer temperature on heatstroke-related emergency ambulance dispatches in the Kanto area of Japan}},
